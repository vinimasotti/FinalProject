<% if @song.audio.file.attached? %>
  <p><strong>File:</strong> <%= link_to "Download", url_for(@song.file) %></p>
  <%= debug @song.file %> <!-- This will show details about the attachment -->
  
  <audio controls>
    <source src="<%= url_for(@song.file) %>" type="<%= @song.file.content_type %>">
    Your browser does not support the audio element.
  </audio>
<% else %>
  <p>No audio file attached.</p>
<% end %>