<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
<br>
    <h3 class="text-center">Log in</h3>
    <hr>

    <!-- Form Start -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>
      
      <!-- Email Field -->
      <div class="form-group text-center mb-4">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
   
        <br>
      <!-- Password Field -->
      <div class="form-group mb-4">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
   <br>

      <!-- Remember Me Field -->
      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "form-check-label" %>
     
      <% end %>

      <!-- Submit Button -->
        <%= f.submit "Log in", class: "btn btn-primary form-control border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
  
    <% end %>

    <!-- Links -->

      <%= render "devise/shared/links" %>
    
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>
  </div>
  
