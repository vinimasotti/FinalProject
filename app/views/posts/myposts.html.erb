<p style="color: green"><%= notice %></p>

<% content_for :title, "Posts" %>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <% if post.user && post.user.id == current_user.id %>
      <%= render post %>
      <br>
    <% end %>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>