<% if user_signed_in? %>
<%= form_with(model: @post, url: posts_path, local: true, html: { multipart: true }) do |form| %>
  <div>
    <% invalid = post.errors.include?(:title) %>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
    <% if invalid %>
      <p style="color:red">
        <%= post.errors.full_messages_for(:title).join(" ,") %>
      </p>
    <% end %>
  
  <div>
    <%= form.text_field :user_id, type: "hidden", value: current_user.id %>
  </div>

  <div>
    <% invalid = post.errors.include?(:description) %>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
    <% if invalid %>
      <p style="color:red">
        <%= post.errors.full_messages_for(:description).join(" ,") %>
      </p>
    <% end %>
  </div>


  <div>
    <% invalid = post.errors.include?(:keywords) %>
   <!-- <%= form.label :keywords, style: "display: block" %>
    <%= form.text_field :keywords, class: "form-control border-2 rounded-pill mt-3 px-4 py-2 w-100" %>   -->
    <% if invalid %>
      <p style="color:red">
        <%= post.errors.full_messages_for(:keywords).join(" ,") %>
      </p>
   
    <% end %>
    
    <br>
    <%= form.file_field :images, 
    multiple: true, 
    required: true, 
    accept: "image/*", 
    data: { max_size: 5.megabytes, preview_target: "image-preview" },
    class: "btn btn-primary border-2 rounded-pill mt-3 px-4 py-2 w-100" %>

      <div id="image-preview" class="mt-3"></div>


  <%= form.label :song, "Upload Song" %>
  <%= form.file_field :song, class: "btn btn-secondary border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
  
    
    <%= form.submit class: "btn btn-success col-12 border-2 rounded-pill mt-3 px-4 py-2 w-100" %>

  <% end %>
  <hr>
  


  <center>
  <div class="container">
  <%= link_to "Back to posts", posts_path, class: "btn btn-light border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
  </div>

  <div class="container">
  
  <%#= link_to "New Song", new_song_path, class: "btn btn-light border-2 rounded-pill mt-3 px-4 py-2 w-100" %>
  </div>
  </center>

<% end %>

</div>