<% if user_signed_in? %>
<%= form_with(model: post) do |form| %>
  <div>
    <% invalid = post.errors.include?(:title) %>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control rounded-pill shadow-sm p-2 border-primary", placeholder: "Enter title..." %>
    <% if invalid %>
      <p style="color:red">
        <%= post.errors.full_messages_for(:title).join(" ,") %>
      </p>
    <% end %>
  
  <div>
    <%= form.text_field :user_id, type: "hidden", value: current_user.id %>
  </div>

  <div>
    <% invalid = post.errors.include?(:description) %>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control rounded-pill shadow-sm p-2 border-primary", placeholder: "Enter description..." %>
    <% if invalid %>
      <p style="color:red">
        <%= post.errors.full_messages_for(:description).join(" ,") %>
      </p>
    <% end %>
  </div>

  <div>
    <% invalid = post.errors.include?(:keywords) %>
    <%= form.label :keywords, style: "display: block" %>
    <%= form.text_field :keywords, class: "form-control rounded-pill shadow-sm p-2 border-primary", placeholder: "Enter keywords..." %>
    <% if invalid %>
      <p style="color:red">
        <%= post.errors.full_messages_for(:keywords).join(" ,") %>
      </p>
    <% end %>
    <br>
    <div class="custom-file">
  <%= form.file_field :images, multiple: true, class: "custom-file-input", id: "imageUpload" %>
  <label class="custom-file-label btn btn-primary rounded-pill shadow-sm px-4 py-2" for="imageUpload">
    📸 Upload Images
  </label>
</div>
    
  </div>


  <div>
    <hr>
     <%= form.submit "⏩ Create a Post", class: "btn btn-primary w-100 rounded-pill shadow-lg fw-bold py-2 px-3 text-uppercase btn-gradient" %>
  </div>
  <% end %>
  <hr>

  <center>
  <div class="container">
  <%= link_to " ⏪ Back to posts", posts_path, class: "btn btn-secondary w-100 rounded-pill shadow-lg fw-bold py-2 px-3 text-uppercase btn-gradient" %>
  </div>

  <div class="container">
  <hr>
  <%= link_to "New Song 🎵 ", new_song_path, class: "btn btn-danger w-100 rounded-pill shadow-lg fw-bold py-2 px-3 text-uppercase btn-gradient" %>
  </div>
  </div>
  </center>

<% end %>

</div>